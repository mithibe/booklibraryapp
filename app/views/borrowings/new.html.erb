<h2>  Borrow "<%= @book.title %>"  </h2>

<%= form_with model: [@book, @borrowing], local: true do |form| %>
    <div>
        <%= form.label :borrower_name, "Borrower's Name" %>
        <%= form.text_field :borrower_name, required: true %>
    </div>

    <div>
        <%= form.label :borrowed_on, "Borrow Date" %>
        <%= form.date_field :borrowed_on value: Date.today %>
    </div>

    <%= form.submit "Borrow Book" %>
<% end %>

<%= link_to 'Back to Book', book_path(@book) %>