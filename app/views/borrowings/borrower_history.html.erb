<h2>  Borrowing History for "<%= @borrower_name %>"  </h2>

<ul>
    <% @borrowings.each do |borrowing| %>
        <li>
            Book: <%= link_to borrowing.book.title, book_path(borrowing.book) %>
            Borrowed on: <%= borrowing.borrowed_on %>
            <% if borrowing.returned_on %>
                - Returned on: <%= borrowing.returned_on %>
            <%else%>
                - Not Returned
            <%end%>
        </li>
    <%end%>
</ul>

<%= link_to 'Back to Books', books_path %>