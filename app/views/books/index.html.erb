<h1>Library Books</h1>

<%= link_to 'Add New Book', new_book_path %>

<ul>
    <% @books.each do |book| %>
        <li>
            <%= link_to book.title, book_path(book) %> by <%= book.author %>
        </li>
    <% end %>
</ul>

<h3> Find Borrower History </h3>
<%= form_with url: borrower_history_path, method: :get, local: true do |form| %>
    <div>
        <%= form.label :borrower_name, "Enter Borrower's Name" %>
        <%= form.text_field :borrower_name, required: true %>
        <%= form.submit "Find Hostory" %>
    </div>
<%end%>